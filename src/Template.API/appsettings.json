{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [],
  "JwtSettings": {
    "Secret": "YourSuperSecureSecretKey1234567890",
    "Issuer": "Template.API",
    "Audience": "Template.API.Users",
    "ExpiryMinutes": 60
  },
  "CacheSettings": {
    "DefaultDurationSeconds": 300,
    "DefaultUseSlidingExpiration": false,
    "DefaultKeyPrefix": "api_cache",
    "MaxCacheSize": 1000,
    "DefaultEntrySize": 1,
    "EnableLogging": true,
    "DefaultPriority": "Normal"
  },
  "ConnectionStrings": {
    "IdentityConnection": "Server=LOCALHOST\\SQLEXPRESS;Database=IdentityDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "DefaultConnection": "Server=LOCALHOST\\SQLEXPRESS;Database=AppDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },
  "DefaultUsersAndRoles": {
    "Roles": [ "Admin", "User", "Doctor", "Patient" ],
    "Users": [
      {
        "Email": "admin@template.com",
        "FullName": "System Administrator",
        "Password": "Admin@123456",
        "Roles": [ "Admin" ]
      },
      {
        "Email": "doctor@template.com",
        "FullName": "Dr. John Smith",
        "Password": "Doctor@123456",
        "Roles": [ "Doctor", "User" ]
      },
      {
        "Email": "patient@template.com",
        "FullName": "Jane Doe",
        "Password": "Patient@123456",
        "Roles": [ "Patient", "User" ]
      }
    ]
  }
}
